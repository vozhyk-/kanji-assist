<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_onlineProvider"
        android:title="@string/pref_onlineProvider"
        android:defaultValue="true" />
    <ListPreference
        android:dependency="pref_onlineProvider"
        android:key="pref_dictionaryProvider"
        android:title="@string/pref_dictionaryProvider"
        android:dialogTitle="@string/pref_dictionaryProviderType"
        android:entries="@array/pref_dictionaryProvider_entries"
        android:entryValues="@array/pref_dictionaryProvider_values"
        android:defaultValue="@string/pref_dictionaryProvider_default" />
</PreferenceScreen>