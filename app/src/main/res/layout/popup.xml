<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="@dimen/popup_height"
              android:id="@+id/popup"
              android:background="@android:color/holo_orange_dark"
              android:fadingEdge="horizontal|vertical"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:elevation="100dp">
    <!-- ^^^ TODO Take maximum elevation of recreated text views instead -->

    <TextView
        android:text="textSelected"
        android:id="@+id/textSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:textAppearance="@android:style/TextAppearance.Material.Title" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClose"
        android:textAppearance="@android:style/TextAppearance.Material.Button"
        android:layout_row="2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_row="1"
        >
    <TextView
        android:text="textDictionary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDictionary"
        android:visibility="invisible" />
    </ScrollView>
</GridLayout>
